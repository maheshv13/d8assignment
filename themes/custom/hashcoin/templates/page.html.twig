<div id="page">
  <header id="header" class="header">
    <div class="container-fluid">
      <div class="header-top row align-items-center">
        <div class="col-md-4">
          {{ page.headertop }}
        </div>
        <div class="logo col-md-4">
          <a href="{{ path('<front>') }}" title="{{ site_name }}"> <img class="img-fluid" src="{{ logopath }}" /> </a>
        </div>
        <div class="col-md-4 hc-search">
          {{ page.searchbox }}
        </div>
      </div>
    </div>
    <div class="container">
      <div class="header__region">
        {{ page.header }}
      </div>
    </div>
  </header>
  <div class="banner">
    <div> {{ page.banner }} </div>
  </div>
  <section id="main">
    <div class="container-fluid">
        <div class="row">
                {% if page.sidebar %}
            <div id="content" class="col-md-9 col-sm-9 col-xs-12">
                {{ page.content }}
            </div>
            <aside id="sidebar" class="sidebar col-md-3 col-sm-3 col-xs-12">
                 {{ page.sidebar}}
            </aside>
                  {% else %}
            <div id="content">
                  {{ page.content }}
            </div>
                  {% endif %}
        </div>
    </div>
  </section>
  {% if page.footerblog or page.footeraddress or page.footernewsletter %}
    <footer id="footer" class="footer">
      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center">
            <a href="{{ path('<front>') }}" title="{{ site_name }}" class="footer-logo"> </a>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4 text-center">
            {{ page.footerblog }}
          </div>
          <div class="col-md-4 text-center">
            {{ page.footeraddress }}
          </div>
          <div class="col-md-4 text-center">
            {{ page.footernewsletter }}
          </div>
        </div>
        
      </div>
    </footer>
  {% endif %}
</div>